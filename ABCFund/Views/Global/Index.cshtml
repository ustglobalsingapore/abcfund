@model IEnumerable<ABCFund.Models.Holding>

@{
    ViewData["Title"] = "Global Holdings";
}

<body id="page-top">

    <h1 class="h3 mb-2 text-gray-800">Global Fund Holdings</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Symbol)</th>
                            <th>@Html.DisplayNameFor(model => model.Weight)</th>
                            <th>@Html.DisplayNameFor(model => model.Sector)</th>
                            <th>@Html.DisplayNameFor(model => model.Industry)</th>
                            <th>@Html.DisplayNameFor(model => model.Shares)</th>
                            <th>@Html.DisplayNameFor(model => model.InitialValue)</th>
                            <th>@Html.DisplayNameFor(model => model.FundId)</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int RowNo = 0;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @{RowNo++;} @RowNo
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Symbol)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Weight)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sector)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Industry)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Shares)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InitialValue)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FundId)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <!--a asp-action="Delete" asp-route-id="@item.Id">Delete</a-->
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>


</body>